@using Domain.Entities
@using WebUI.Extensions
@model UserInfo
@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminContent.cshtml";
}

<div class="box box-primary">
	<div class="box-header with-border">
		<h3 class="box-title">详细</h3>
	</div>
	<form>
		<div class="box-body">
			<div class="form-group">
				<label>ID</label>
				@Html.TextBoxFor(m => m.ID, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				<label>用户名</label>
				@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				<label>描述</label>
				@Html.TextAreaFor(m => m.Description, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				<label>创建时间</label>
				@Html.TextBoxFor(m => m.CreateTime, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				<label>电子邮箱</label>
				@Html.TextBoxFor(m => m.Email, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				<label>角色</label>
				@{ string[] colors = { "warning", "primary", "danger", "default" }; }
				@for (int i = 0; i < Model.RoleInfos.Count; i++)
				{
					if (Model.RoleInfos[i].Name == "教师")
					{
						<span class="label label-success">@Model.RoleInfos[i].Name</span>
					}
					else if (Model.RoleInfos[i].Name == "学生")
					{
						<span class="label label-info">@Model.RoleInfos[i].Name</span>
					}
					else
					{
						<span class="label label-@colors[i % colors.Length]">@Model.RoleInfos[i].Name</span>
					}
				}
			</div>
		</div>
		<div class="box-footer">
			<div class="btn-group">
				@if (TempData["RedirectUrl"] != null)
				{
					<a class="btn btn-default" href="@TempData["RedirectUrl"].ToString()">返回</a>
				}
				else
				{
					<a class="btn btn-default" href="javascript:history.go(-1);">返回</a>
				}
			</div>
		</div>
	</form>
</div>
