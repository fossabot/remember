@using Domain.Entities
@using WebUI.Areas.Admin.Models
@using WebUI.Extensions
@using PluginHub.Mvc5
@using Services.Interface;
@using Framework.Models
@using Framework.Extensions
@using Framework.Infrastructure.Concrete
@using Core;
@{
	Layout = null;

	// 当前登录账号
	CurrentAccountModel currentAccount = AccountManager.GetCurrentAccount();
	UserInfo currentUserInfo = currentAccount.UserInfo;
	string roleName = currentUserInfo.RoleInfos.FirstOrDefault() == null ? "" : currentUserInfo.RoleInfos.FirstOrDefault().Name;

	ViewBag.CurrentAccount = currentAccount;
	ViewBag.RoleName = roleName;


	IDictionary<int, string> themeTemplateDic = new Dictionary<int, string>();
	//	IList<ThemeTemplate> themeTemplates = Container.Instance.Resolve<ThemeTemplateService>().Query(new List<ICriterion>
	//{
	//Expression.Eq("IsOpen", 1)
	//});
	IList<ThemeTemplate> themeTemplates = ContainerManager.Resolve<IThemeTemplateService>().Filter(m => m.IsOpen == 1 && !m.IsDeleted).ToList();
	themeTemplateDic = new Dictionary<int, string>();
	foreach (var item in themeTemplates)
	{
		themeTemplateDic.Add(item.ID, item.Title);
	}
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<meta name="title" content="@ViewBag.Title" />
	<meta name="site" content="@WebSetting.Get("WebUISite")" />
	<meta name="description" content="@ViewBag.Desc" />
	<!-- Tell the browser to be responsive to screen width -->
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
	<link rel="stylesheet" href="/assets/libs/AdminLTE/bower_components/bootstrap/dist/css/bootstrap.min.css">
	<!-- Font Awesome -->
	<link rel="stylesheet" href="/assets/libs/AdminLTE/bower_components/font-awesome/css/font-awesome.min.css">
	<!-- Ionicons -->
	<link rel="stylesheet" href="/assets/libs/AdminLTE/bower_components/Ionicons/css/ionicons.min.css">
	<!-- Theme style -->
	<link rel="stylesheet" href="/assets/libs/AdminLTE/dist/css/AdminLTE.min.css">
	<link rel="stylesheet" href="/assets/libs/AdminLTE/dist/css/skins/skin-blue.min.css">
	<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
	@RenderSection("head", false)
</head>
<!-- ADD THE CLASS layout-top-nav TO REMOVE THE SIDEBAR. -->
<body class="hold-transition skin-blue layout-top-nav">
	<div class="wrapper">

		<header class="main-header">
			<nav class="navbar navbar-static-top">
				<div class="container">
					<div class="navbar-header">
						<a href="/" class="navbar-brand">@WebSetting.Get("WebUITitle")</a>
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
							<i class="fa fa-bars"></i>
						</button>
					</div>

					<!-- Collect the nav links, forms, and other content for toggling -->
					@{ Html.RenderPartial("_TopNav_NavbarCollapsePartial"); }
					<!-- /.navbar-collapse -->
					<!-- Navbar Right Menu -->
					<div class="navbar-custom-menu">
						<ul class="nav navbar-nav">
							<!-- Messages: style can be found in dropdown.less-->
							@{ Html.RenderPartial("_TopNav_MessagesMenuPartial"); }
							<!-- /.messages-menu -->
							<!-- Notifications Menu -->
							@{ Html.RenderPartial("_TopNav_NotificationsMenuPartial"); }
							<!-- Tasks Menu -->
							@{ Html.RenderPartial("_TopNav_TasksMenuPartial"); }
							<!-- User Account Menu -->
							@{ Html.RenderPartial("_TopNav_UserAccountMenuPartial"); }
							<!-- Control Sidebar Toggle Button -->
							<li>
								<a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
							</li>
						</ul>
					</div>
					<!-- /.navbar-custom-menu -->
				</div>
				<!-- /.container-fluid -->
			</nav>
		</header>
		<!-- Full Width Column -->
		<div class="content-wrapper">
			<div class="container">
				@RenderBody()
			</div>
			<!-- /.container -->
		</div>
		<!-- /.content-wrapper -->
		<footer class="main-footer">
			<div class="container">
				<div class="pull-right hidden-xs">
					<b>Version</b> 2.3.7
				</div>
				<strong>Copyright &copy; 2014-2016 <a href="http://almsaeedstudio.com">Almsaeed Studio</a>.</strong> All rights
				reserved.
			</div>
			<!-- /.container -->
		</footer>
		<!-- Control Sidebar -->
		<aside class="control-sidebar control-sidebar-dark">
			<!-- Create the tabs -->
			<ul class="nav nav-tabs nav-justified control-sidebar-tabs">
				<li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
				<li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
			</ul>
			<!-- Tab panes -->
			<div class="tab-content">
				<!-- Home tab content -->
				<div class="tab-pane active" id="control-sidebar-home-tab">
					<h3 class="control-sidebar-heading">选择主题模板</h3>
					<ul class="control-sidebar-menu">
						@foreach (var item in themeTemplateDic)
						{
							<li>
								<a onclick="selectTemplate(@item.Key)">
									<h4 class="control-sidebar-subheading"><i class="fa fa-th-large"></i> @item.Value</h4>
								</a>
							</li>
						}
					</ul>
					<!-- /.control-sidebar-menu -->
				</div>
				<!-- /.tab-pane -->
				<!-- Stats tab content -->
				<div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div>
				<!-- /.tab-pane -->
				<!-- Settings tab content -->
				<div class="tab-pane" id="control-sidebar-settings-tab">
					<form method="post">
						<h3 class="control-sidebar-heading">General Settings</h3>
						<div class="form-group">
							<label class="control-sidebar-subheading">
								Report panel usage
								<input type="checkbox" class="pull-right" checked>
							</label>
							<p>
								Some information about this general settings option
							</p>
						</div>
						<!-- /.form-group -->
					</form>
				</div>
				<!-- /.tab-pane -->
			</div>
		</aside>
		<!-- /.control-sidebar -->
		<div class="control-sidebar-bg"></div>
	</div>
	<!-- ./wrapper -->
	<!-- jQuery -->
	<script src="/assets/libs/AdminLTE/bower_components/jquery/dist/jquery.min.js"></script>
	<!-- Bootstrap 3.3.7 -->
	<script src="/assets/libs/AdminLTE/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
	<!-- AdminLTE App -->
	<script src="/assets/libs/AdminLTE/dist/js/adminlte.min.js"></script>
	<script src="http://pv.sohu.com/cityjson?ie=utf-8"></script>
	<script src="/assets/libs/ua-parser-js/dist/ua-parser.min.js"></script>
	<script src="/assets/js/log.js"></script>
	<script src="/assets/libs/push.js/push.min.js"></script>
	<script>
		function pushMessage(title, message, imageUrl, redirectUrl) {
			Push.create(title, {
				body: message,
				icon: imageUrl,
				timeout: 4000,
				onClick: function () {
					window.focus();
					this.close();
					if (redirectUrl != null && redirectUrl != '') {
						window.location.href = redirectUrl;
					}
				}
			});
		}

		function selectTemplate(id) {
			$.ajax({
				url: '/Admin/ThemeTemplate/SelectTemplate',
				type: 'post',
				data: { id: id },
				dataType: 'json',
				success: function (data) {
					if (data.code <= 0) {
						pushMessage('切换模板失败', data.message);
					} else {
						window.location.href = window.location.href;
					}
				}
			});
		}
	</script>
	@RenderSection("body", false)
</body>
</html>
